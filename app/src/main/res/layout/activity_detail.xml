<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:src="@drawable/detail_mum" />


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/mum_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xyz Hotel"
            android:textAlignment="center"
            android:background="#c19f7b"
            android:textSize="25sp"
            android:padding="5dp"
            android:fontFamily="@font/fonte"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:textColor="#c19f7b"
            android:layout_marginTop="5sp"
            android:textSize="23sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/mum_hotel_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gold Coast , PlotNo 4023 , Crossing Road , Faridabad , Mumbai"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:layout_marginTop="5sp"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price For Two:"
            android:textColor="#c19f7b"
            android:layout_marginTop="5sp"
            android:textSize="21sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/mum_hotel_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs5000 per Night for two person"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:layout_marginTop="5sp"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details:"
            android:textColor="#c19f7b"
            android:layout_marginTop="5sp"
            android:textSize="23sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/mum_hotel_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hotel_details"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:layout_marginTop="5sp"
            android:textSize="18sp"
            />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-In Date:"
        android:textColor="#c19f7b"
        android:layout_marginTop="5sp"
        android:textSize="21sp"
        android:textStyle="bold"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Date Here"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-Out Date:"
            android:textColor="#c19f7b"
            android:layout_marginTop="5sp"
            android:textSize="21sp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Date Here"

            />
        <Button
            android:id="@+id/mum_hotel_conf"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:background="#c19f7b"
            android:textSize="20sp"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            />


    </LinearLayout>
    </ScrollView>




    </LinearLayout>